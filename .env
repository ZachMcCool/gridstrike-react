# GridStrike React App Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Database Configuration (mirrors MongoDbSettings.cs)
VITE_DB_NAME=GridStrikeDb
VITE_COLLECTION_CARDS=Cards
VITE_COLLECTION_DECKS=Decks

# Application Settings (mirrors appsettings.json)
VITE_DETAILED_ERRORS=true
VITE_LOG_LEVEL=Information
VITE_API_LOG_LEVEL=Warning

# MongoDB Atlas Data API
VITE_MONGODB_DATA_API_URL=https://data.mongodb-api.com/app/your-app-id/endpoint/data/v1
VITE_MONGODB_API_KEY=your-api-key-here
VITE_MONGODB_DATA_SOURCE=Cluster0
VITE_DB_NAME=GridStrikeDb
VITE_COLLECTION_CARDS=Cards

# Alternative: Realm App Services
VITE_REALM_APP_ID=your-realm-app-id
